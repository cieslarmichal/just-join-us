    "eslint": "9.24.0",
    "eslint-config-prettier": "10.1.1",
    "eslint-plugin-perfectionist": "4.11.0",
    "prettier": "3.5.3",
    "turbo": "2.5.0",
    "typescript": "5.8.3",
    "typescript-eslint": "8.29.1"
  },
  "volta": {
    "node": "23.8.0",
    "npm": "11.1.0"
  },
  "engines": {
    "node": ">=23",
    "npm": ">=11"
  },
  "workspaces": [
    "apps/*",
    "tools/*"
